        "web-vitals": "^2.1.4"
    },
    "scripts": {
        "dev": "npm run electron:build && concurrently --kill-others 'vite --port 12800' 'APP_MODE=dev npm run electron:start'",
        "watch": "npm run electron:build && concurrently --kill-others 'vite --port 12800' 'APP_MODE=watch npm run electron:start'",
        "start": "npm run renderer:build && npm run electron:build && npm run electron:start",
        "clean": "rimraf ./dist",
        "renderer:start": "vite",
        "renderer:preview": "vite preview",
        "renderer:build": "rimraf ./dist/rederer && vite build",
        "electron:build": "rimraf ./dist/main && tsc --project ./electron/tsconfig.json",
        "electron:start": "electron ./dist/main/main.js",
        "test": "react-scripts test",
        "eject": "react-scripts eject"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@types/electron": "^1.6.10",
        "concurrently": "^7.2.1",
        "electron-builder": "^23.0.3",
        "rimraf": "^3.0.2"
    }
