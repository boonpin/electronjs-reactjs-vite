        "@types/react-router": "^5.1.18",
        "@vitejs/plugin-react": "^1.3.2",
        "@vitejs/plugin-react-refresh": "^1.3.6",
        "antd": "^4.20.7",
        "axios": "^0.27.2",
        "connected-react-router": "^6.9.2",
        "electron": "^19.0.2",
        "electron-is-dev": "^2.0.0",
        "less": "^4.1.2",
        "moment": "^2.29.3",
        "postcss": "^8.4.14",
        "react": "^18.1.0",
        "react-dom": "^18.1.0",
        "react-icons": "^4.4.0",
